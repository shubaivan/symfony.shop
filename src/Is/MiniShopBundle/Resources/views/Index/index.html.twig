{% extends '::base.html.twig' %}

{% block title %}Минишоп{% endblock %}
{% block container %}
    <h2>Минишоп</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Cклады</h3>
            <table class="table">
                <tr>
                    <th>Склад</th>
                    <th>Товар</th>
                    <th>Количество</th>
                </tr>
                {% for store in stores %}
                    <tr>
                        <td><a href="{{ path('is_minishop_store_get', {'slug': store.slug}) }}">{{ store.title }}</a></td>
                        <td>{{ store.product.title }}</td>
                        <td>{{ store.productQuantity }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-md-6">
            <h3>Продажи</h3>
        </div>
    </div>
{% endblock %}
