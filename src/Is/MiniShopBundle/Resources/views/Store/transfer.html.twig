{% extends '::base.html.twig' %}

{% block title %}Перемещение между складами{% endblock %}

{% block container %}
    <h3>Перемещение между складами</h3>
    <div class="row">
        <div class="col-md-4">
            <form role="form" method="post">
                <div class="form-group">
                    <label for="from">Название склада</label>
                    <select name="from" class="form-control">
                        {% for store in stores %}
                            <option value="{{ store.id }}">{{ store.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="to">Название склада</label>
                    <select name="to" class="form-control">
                        {% for store in stores %}
                            <option value="{{ store.id }}">{{ store.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="quantity">Количество</label>
                    <input name="quantity" type="number" required class="form-control" id="quantity" placeholder="Количество">
                </div>
                <br>
                <button type="submit" class="btn btn-default">Создать</button>
            </form>
        </div>
    </div>
{% endblock %}
